    <insert id="insertVideoProperty" parameterType="VideoProperty">
        INSERT INTO tblVideo (VideoName,VideoURL,StartedTime,EndedTime,ShelfCameraMappingId,StackProductCameraMappingId,StatusId) values
            (#{videoNameOriginal},#{videoUrl},#{startedTime},
            #{endedTime},#{shelfCameraMappingId},#{stackProductCameraMappingId},#{statusId})
    </insert>

    <insert id="insertHotSpot" parameterType="VideoProperty">
        INSERT INTO tblHotSpot (StartedTime,EndedTime,TotalPeople,ShelfCameraMappingId) values
        (#{startedTime},#{endedTime},#{totalPerson},#{shelfCameraMappingId})
    </insert>

</mapper>
